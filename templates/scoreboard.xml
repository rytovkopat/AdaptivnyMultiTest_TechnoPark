<?xml version="1.0"?>
<fest:template xmlns:fest="http://fest.mail.ru" context-name="players">
     <form class="menu">
         <table border="1" width="100%" cellpadding="5">
           	 <tr>
           	 	 <th>№</th>
           	 	 <th>Имя</th>
           	 	 <th>Рейтинг</th>
          	 </tr>
            
             <fest:for iterate="players" index="i" value="p">
            	 <tr>
             	 	 <th><fest:value>i</fest:value></th>
             	 	 <th>p.nickName <fest:space/> <fest:value>i</fest:value> </th>
             	 	 <th><fest:value>p.score</fest:value></th>
            	 </tr>
             </fest:for>
              
               
           

        </table>

        
        
  
     </form>

     <div align="center" class="menu">
         <button class="menu__btn_short" id="main" >Back</button>
     </div>
   </div>
</fest:template>


